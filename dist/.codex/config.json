{
  "model": "gpt-5.2-codex",
  "temperature": 0.0,
  "max_output_tokens": 4096,
  "approval_policy": "never",

  "read_only_paths": [],
  "writable_paths": ["."],

  "diff_mode": "unified",
  "auto_apply": true,

  "git": {
    "require_clean_worktree": false,
    "auto_stage": true,
    "auto_commit": false
  },

  "safety": {
    "block_destructive_commands": true,
    "block_shell_rm_rf": true,
    "block_git_reset_hard": true,
    "block_git_clean": true
  },

  "analysis": {
    "log_file": ".codex/codex.log",
    "trace_file_reads": true,
    "trace_file_writes": true
  },

  "style": {
    "prefer_small_diffs": true,
    "no_reformat_without_request": true,
    "no_semantic_changes_without_tests": true
  }
}